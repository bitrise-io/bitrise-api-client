{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["ES2015", "DOM"],
        "sourceMap": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "strict": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "lib": [
        "es2015"
      ],
    "types": [
        "typePatches"
    ]
}